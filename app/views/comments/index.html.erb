<%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :commenter_id_lt, "Commenter less than" %>
    <%= f.text_field :commenter_id_lt, :class => "form-control", :placeholder => "Commenter less than" %>
  </div>

<div class="form-group">
    <%= f.label :commenter_id_lteq, "Commenter less than or equal to" %>
    <%= f.text_field :commenter_id_lteq, :class => "form-control", :placeholder => "Commenter less than or equal to" %>
  </div>

<div class="form-group">
    <%= f.label :commenter_id_gt, "Commenter greater than" %>
    <%= f.text_field :commenter_id_gt, :class => "form-control", :placeholder => "Commenter greater than" %>
  </div>

<div class="form-group">
    <%= f.label :commenter_id_gteq, "Commenter greater than or equal to" %>
    <%= f.text_field :commenter_id_gteq, :class => "form-control", :placeholder => "Commenter greater than or equal to" %>
  </div>

<div class="form-group">
    <%= f.label :comment_description_eq, "Comment description equals" %>
    <%= f.text_field :comment_description_eq, :class => "form-control", :placeholder => "Comment description equals" %>
  </div>

<div class="form-group">
    <%= f.label :comment_description_cont, "Comment description containing" %>
    <%= f.text_field :comment_description_cont, :class => "form-control", :placeholder => "Comment description containing" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block" %>

  <a href="/comments" class="btn btn-default btn-block">Clear filters</a>
<% end %>
<div class="page-header">
  <h1>
    Comments
    <a href="/comments/new" class="btn btn-lg btn-success">New Comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Commenter</th>
        <th>Comment description</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter.email %></td>
        <td><%= comment.comment_description %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
